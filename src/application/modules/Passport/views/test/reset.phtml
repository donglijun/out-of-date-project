<script>
    $(function() {
        $("#name").focus();

        $("#resetform").submit(function() {
            var name = $("#name").val();

            $.post(
                '/passport/user/reset_password',
                {
                    name: name
                },
                function(res) {
                    if (res.code == 200) {
//                        window.location.href = '/passport/test/profile';
                    }

                    $("#result").text(JSON.stringify(res));
                    alert(JSON.stringify(res));
                },
                'json'
            );

            return false;
        });
    });
</script>